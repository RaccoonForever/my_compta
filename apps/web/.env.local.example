# Web – Environment variables for local development
# Copy this file to .env.local and fill in the values.

# BFF base URL (pre-configured for Docker Compose; browser uses localhost)
NEXT_PUBLIC_BFF_URL=http://localhost:4001

# Firebase project (web SDK – emulator mode)
NEXT_PUBLIC_FIREBASE_PROJECT_ID=my-compta-dev
NEXT_PUBLIC_FIREBASE_API_KEY=demo-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=localhost

# Emulator hosts (server-side usage if any)
FIRESTORE_EMULATOR_HOST=firebase:8080
FIREBASE_AUTH_EMULATOR_HOST=firebase:9099
